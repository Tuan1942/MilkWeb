<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FARMMILK</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FarmMilk.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body style="white-space: nowrap; z-index:2; background-color: #C8D6CE">
    <header style="position:fixed; width: 100%; z-index: 10;    background-color: #668C75;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light " style="background-color: #668C75;">
            <div class="container-fluid" style="background-color: #668C75;">
                <a class="navbar-brand" style="color:white;" asp-area="" asp-controller="Home" asp-action="Home">FARMMILK</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Home">Trang chủ</a>
                        </li>
                    </ul>
                </div>
                <div style="z-index:1">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

    </header>
    <nav class="sidebar">
        <ul>
            <li>
                <a style="text-decoration: none; color: white;" asp-controller="Home" asp-action="Home">Quản lý đơn hàng</a>
            </li>
            <li><a href="#">Báo cáo</a></li>
        </ul>
    </nav>

    <div class="container" style="position:relative; z-index: 0;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
